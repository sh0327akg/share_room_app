<div class="form-main">
  <%= form_with(model: @room, local: true) do |f| %> 
    <div class="forms">
      <div class="form-title">
        <h2>ルーム新規登録</h2>
      </div>
      <div class="form-content">
        <div class="row">
          <%= f.label :room_name, "ルーム名", class:"form-label"%>
          <%= f.text_field :room_name, class: "input input-area", placeholder: "ルーム名を入力"%>
        </div>
      </div>
      <div class="form-content">
        <div class="row">
          <%= f.label :description, "ルーム紹介", class:"form-label"%>
          <%= f.text_area :description, class: "input input-area", placeholder: "ルーム説明を入力", rows:"10" %>
        </div>
      </div>
      <div class="form-content">
        <div class="row">
          <%= f.label :price, "料金", class:"form-label"%>
          <%= f.number_field :price, class:"input input-area", placeholder: "1日あたりの料金を入力" %>
        </div>
      </div>
      <div class="form-content">
        <div class="row">
          <%= f.label :address, "住所", class:"form-label"%>
          <%= f.text_field :address, class:"input input-area", placeholder: "住所を入力" %>
        </div>
      </div>
      <div class="form-content">
        <div class="row">
          <%= f.label :room_image, "ルーム画像", class:"form-label"%>
          <%= f.file_field :room_image, class:"input input-image-area"%>
        </div>
      </div>
      <div class="form-content btns">
        <%= f.submit "登録する",class:"submit-btn" %>
        <%= link_to "もどる",root_path,class:"rtn-btn"%>
      </div>
        
    </div>
  <% end %>
</div>